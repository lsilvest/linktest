RCPPCCTZ = $(shell ${R_HOME}/bin/Rscript -e "cat(sprintf('RcppCCTZ%s', .Platform[['dynlib.ext']]))")
FULL_PATH_RCPPCCTZ = $(shell ${R_HOME}/bin/Rscript -e "cat(sprintf('%s/RcppCCTZ/libs/${RCPPCCTZ}', installed.packages()['RcppCCTZ','LibPath'][1]))")

PKG_LDFLAGS = 
PKG_LIBS = -lstdc++ -ldl ${FULL_PATH_RCPPCCTZ}

.PHONY: all change_install_name

change_install_name: $(SHLIB)
ifeq ($(shell uname), Darwin)
	install_name_tool -change ${RCPPCCTZ} ${FULL_PATH_RCPPCCTZ} ${SHLIB}
endif
